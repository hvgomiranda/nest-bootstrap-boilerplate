{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@cache/*": ["src/cache/*"],
      "@config/*": ["src/config/*"],
      "@cron/*": ["src/cron/*"],
      "@disk-storage/*": ["src/disk-storage/*"],
      "@http-client/*": ["src/http-client/*"],
      "@mail/*": ["src/mail/*"],
      "@open-ai/*": ["src/open-ai/*"],
      "@queue/*": ["src/queue/*"],
      "@rate-limit/*": ["src/rate-limit/*"],
      "@socket/*": ["src/socket/*"],
      "@shared/*": ["src/shared/*"],
      "@repositories/*": ["./src/infrastructure/repositories/*"],
      "@models/*": ["./src/infrastructure/database/mongodb/models/*"],
      "@entities/*": ["./src/infrastructure/database/postgresql/entities/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@device/*": ["src/modules/device/*"],
      "@notification/*": ["src/modules/notification/*"],
      "@otp/*": ["src/modules/otp/*"],
      "@post/*": ["src/modules/post/*"],
      "@role/*": ["src/modules/role/*"],
      "@token/*": ["src/modules/token/*"],
      "@user/*": ["src/modules/user/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true
  }
}
